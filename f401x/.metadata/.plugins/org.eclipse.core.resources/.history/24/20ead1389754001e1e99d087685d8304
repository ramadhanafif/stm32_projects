		.cb_mem = &BtnEventHandlerControlBlock, .cb_size =
				sizeof(BtnEventHandlerControlBlock), .stack_mem =
				&BtnEventHandlerBuffer[0], .stack_size =
				sizeof(BtnEventHandlerBuffer), .priority =
				(osPriority_t) osPriorityLow, };
/* Definitions for BtnEvent */
osMessageQueueId_t BtnEventHandle;
uint8_t BtnEventBuffer[16 * sizeof(uint8_t)];
osStaticMessageQDef_t BtnEventControlBlock;
const osMessageQueueAttr_t BtnEvent_attributes = { .name = "BtnEvent", .cb_mem =
		&BtnEventControlBlock, .cb_size = sizeof(BtnEventControlBlock),
		.mq_mem = &BtnEventBuffer, .mq_size = sizeof(BtnEventBuffer) };
